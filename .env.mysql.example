# MySQL Database Configuration (DockChron Style)
# Copy this file to .env and update with your MySQL credentials

# Primary database connection (recommended)
DATABASE_URL=mysql://car_user:secure_password@localhost:3306/car_cash_offers

# Alternative: Individual database variables (DockChron pattern)
DB_HOST=localhost
DB_PORT=3306
DB_USER=car_user
DB_PASSWORD=secure_password
DB_NAME=car_cash_offers

# Legacy MySQL variables (fallback support)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=car_user
MYSQL_PASSWORD=secure_password
MYSQL_DATABASE=car_cash_offers

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root_secure_password
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# Application Settings
NODE_ENV=development